ORG 0000H ;BAT DAU CT
	LJMP MAIN
	MAIN:
		SETB P1.0
		CALL DELAY1S
		CLR P1.0
		MOV TMOD,#10H ;TIMER 1 MOD 1  <=> GATE 0, CT 0,M1 0,M0 1 
	DELAY1S:

		MOV R7,#20 ; 20 LOOPS
	LOOP:   
		MOV TL1,#0B0H ;
		MOV TH1,#3CH ;
		SETB TR1 ; START TIMER 1
		JNB TF1, $ ; WAIT FOR OVERFLOW <=> WAIT: JNB TF1, WAIT
		CLR TF1 ; CLEAR OVERFLOW FLAG
		CLR TR1 ; STOP TIMER 1
		DJNZ R7,LOOP

	RET